<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_VacationNameAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Vacation Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hotelNameAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Hotel Name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_VacationNameAdapter"
        app:layout_constraintStart_toEndOf="@+id/tv_VacationNameAdapter"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_startDateAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Start Date"
        app:layout_constraintStart_toEndOf="@+id/tv_VacationNameAdapter"
        app:layout_constraintTop_toBottomOf="@+id/tv_hotelNameAdapter" />

    <TextView
        android:id="@+id/tv_endDateAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="EndDate"
        app:layout_constraintBottom_toBottomOf="@+id/tv_startDateAdapter"
        app:layout_constraintStart_toEndOf="@+id/tv_startDateAdapter" />
</androidx.constraintlayout.widget.ConstraintLayout>